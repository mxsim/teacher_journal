<!--- subject_profile.hbs --->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{subject.subject_name}} - Subject Profile</title>
  <link rel="stylesheet" href="/css/subject_profile.css">
  <style>
    .subject-header {
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
    url('{{subject.subject_photo}}'),
    url('/img/default-subject.jpg');
    background-size: cover;
    background-position: center;
    height: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    position: relative;
}
  </style>
</head>
<body>
  <div class="subject-header">
    <h1>{{subject.subject_name}}</h1>
    <div class="teacher-info">
      <img src="{{teacher.image}}" class="teacher-photo" alt="Teacher photo">
      <div>
        <p>Викладач: {{teacher.name}} {{teacher.surname}}</p>
      </div>
    </div>
  </div>

  <!-- Add Description Editor -->
  {{#if isOwner}}
  <div class="description-editor">
    <textarea id="subjectDescription" placeholder="Додайте опис предмету...">{{subject.description}}</textarea>
    <button onclick="updateDescription()">Зберегти опис</button>
  </div>
  {{else}}
  <div class="subject-description">
    {{#if subject.description}}
      {{subject.description}}
    {{else}}
      <em>Опис предмету відсутній</em>
    {{/if}}
  </div>
  {{/if}}

  <!-- Modals (keep existing ones and add new) -->
  <!-- Add Rename Material Modal -->
  <div class="modal" id="renameMaterialModal">
    <div class="modal-content">
      <span class="close" onclick="closeModal('renameMaterialModal')">&times;</span>
      <h3>Перейменувати матеріал</h3>
      <form id="renameForm">
        <input type="text" id="newFileName" required>
        <button type="submit">Зберегти</button>
      </form>
    </div>
  </div>

  <!-- Add Group Management Modal -->
  <div class="modal" id="manageGroupModal">
    <div class="modal-content">
      <span class="close" onclick="closeModal('manageGroupModal')">&times;</span>
      <h3>Керування групами</h3>
      <select id="availableGroups">
        <!-- Options will be populated by JS -->
      </select>
      <button onclick="addGroupToSubject()">Додати групу</button>
    </div>
  </div>

  <div class="nav-buttons">
    <button class="nav-button active" data-target="main-content">Main</button>
    <button class="nav-button" data-target="groups-content">Groups</button>

  </div>

  <!-- Main Content -->
  <div id="main-content" class="content-section active">
    {{#if isOwner}}
            <button class="add-material-btn" onclick="toggleModal('addMaterialModal')">+ Додати матеріал</button>
        {{/if}}
    {{#each materialsByType}}
        
      <div class="foldable-section">
        <div class="section-header" onclick="toggleSection('{{@key}}')">
          <h2>{{@key}} ({{this.length}})</h2>
          <span class="toggle-icon">▼</span>
        </div>
        
        <div class="section-content" id="{{@key}}-content">
          {{#if this.length}}
            {{#each this}}
              <div class="material-item">
                <div class="material-info" onclick="window.open('{{this.file_path}}', '_blank')">
                  <img src="/img/icons/{{this.material_type}}.png" class="material-icon" alt="{{this.material_type}}">
                  <span>{{this.file_name}}</span>
                </div>
                {{#if ../isOwner}}
                <div class="material-actions">
                  <button class="rename-btn" onclick="showRenameModal({{this.id}}, '{{this.file_name}}')">
                    Перейменувати
                  </button>
                  <button class="delete-btn" onclick="confirmDeleteMaterial({{this.id}})">
                    Видалити
                  </button>
                </div>
                {{/if}}
              </div>
            {{/each}}
          {{else}}
            <div class="no-materials">Матеріали відсутні</div>
          {{/if}}
        </div>
      </div>
    {{/each}}
  </div>

  <!-- Groups Content -->
  <div id="groups-content" class="content-section">
        {{#if isOwner}}
            <button class="manage-groups-btn" onclick="addGroups()">+ Додати групу</button>
        {{/if}}

    {{#each groups}}
      <div class="foldable-section">
        <div class="group-header">
          <h2>{{this.group_name}}</h2>
          {{#if ../isOwner}}
            <button class="delete-group-btn" onclick="confirmDeleteGroup({{this.subject_group_id}})">
              Видалити групу
            </button>
          {{/if}}
        </div>
        
        <div class="group-members">
          <div class="member-header">
            <div>Фото</div>
            <div>ПІБ</div>
            <div>Спеціальність</div>
            <div>Роль</div>
          </div>
          {{#each this.members}}
            <div class="member-row" onclick="window.location.href='/user_profile/{{this.user_id}}'">
              <img src="{{#if this.user_profile_image}}
                  /uploads/users/profile_data/{{this.user_profile_image}}
                {{else}}
                  /img/default-profile.png
                {{/if}}" 
                class="member-photo">
              <div>{{this.surname}} {{this.name}} {{this.parent_name}}</div>
              <div>{{this.speciality_name}}</div>
              <div>{{this.role}}</div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/each}}
  </div>

  <script src="/js/client_subject_profile.js"></script>
</body>
</html>